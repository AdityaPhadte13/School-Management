<%- include('includes/head.ejs') %>
</head>

<body>
  <%- include('includes/nav.ejs') %>
  <main class="container pt-5">
    <div class="container text-center">
      <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/img/almeida.jpg" height="500px" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/img/almeida2.jpg" height="500px" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/img/almeida3.jpg" height="500px" class="d-block w-100" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <table style="width:100%" class="table table-bordered table-hover table-responsive-sm">
      <thead>
        <tr class="bg-primary">
          <th>Sr. No.</th>
          <th>Date</th>
          <th>Title</th>
          <th>File</th>
        </tr>
      </thead>
      <tbody>
        <% var i = 1; %>
        <% for (notice of notices)  {%>
        <tr class="table-primary">
          <td><%= i %></td>
          <td>
            <span>
              <%= 
            new Date(notice.DatePosted).getDate() 
            %>/<%=
             new Date(notice.DatePosted).getMonth() 
            %>/<%=
             new Date(notice.DatePosted).getFullYear() 
            %>
            </span>
          </td>
          <td><%= notice.Title %></td>
          <td><%= notice.FileLocation %></td>
        </tr>
        <% i++; } %>
      </tbody>
    </table>
  </main>
  <%- include('includes/end.ejs')%>